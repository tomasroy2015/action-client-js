/* All external import files
======================================================*/
@import '../Shared/SCSS/_Colors';
@import '../Shared/SCSS/_Mixins';

/* Variables
======================================================*/
$left-arrow-width : 16px;
$left-arrow-height : 20px;

.data-filter-container {
  background-color : $GIARTE_GRAY;
  width    : 100%;
  height   : 100%;
  position : relative;
  .left-arrow-container {
    position   : absolute;
    background : $GIARTE_GRAY;
    right      : -$left-arrow-width;
    top : 10px;
    text-align : center;
    @include boxShadow(0, 0, 4px, 2px, $GIARTE_DARK_GRAY, 0.5);
    height     : $left-arrow-height;
    width      : $left-arrow-width;
    //z-index: 0;
    .fa-caret-left {
      color          : #fff;
      font-size      : 1.2em;
      display        : table-cell;
      vertical-align : middle;
      height         : $left-arrow-height;
      width          : $left-arrow-width;
    }
    &:hover {
      cursor : pointer;
      .fa-caret-left {
        color : rgba(#fff, 0.7);
      }
    }
  }
  .datfilter-header-wrapper{
    background-color: #878787;
    position : relative;
    height : 40px;
    top : 0;
    //border : 1px solid red;
    //box-sizing: border-box;
    //z-index : 1000;
    //border : 1px solid blue;
    > .datafilter-title{
      font-size: 1.2em;
      /*   font-weight: bold; */
      color: #ffffff;
      margin-left:18px;
      margin-top:12px;
    }
  }
}

.datfilter-footer-wrapper{
  background-color: #878787;
  position : relative;
  width : 100%;
  height : 45px;
  bottom : 0;
  //border : 1px solid green;

  //padding-top:-9.5px;height:35.5px;width:100%;
  > .btn-wrapper{
    //margin-left:auto;margin-right:auto;width:60px;height:45px;

    background-color:#ddddde;
    //display:block;
    /*   margin-left: auto;
      margin-right: auto;
      width: 60px;
      height: 45px; */
    width: 60px;
    height: 24px;
    /*   overflow: hidden; */
    margin: auto;
    position: absolute;
    top: 0; left: 0; bottom: 0; right: 0;
    //border:1px solid yellow;
    > .btn-apply{
      background : $GIARTE_DEEP_LIGHT_GRAY;
      text-shadow   : none;
      border-color  : transparent;
      box-shadow    : none;
      border-radius : 0;

      width: 100%;
      height: 100%;
      line-height:100%;
    }
  }
}

.grid-wrapper{
  //top:50px;
  height: 535px;
  width: 385px;
  max-width: 385px;
  position: relative;
  margin-left:15px;
  margin-right:15px;
  > .grid {
    position : absolute;
    //border   : 1px solid #ff0000;
    //width    : 400px !important;
    //max-width : 400px !important;
    //height   : 600px !important;
    width : 100% !important;
    height : 100% !important;
    color:#fff;
  }

  .ui-grid {
    border:none !important;
  }

  .ui-grid-cell-contents{
    background-color : $GIARTE_GRAY !important;
    //border-bottom:1px solid #fff !important;
  }

  .ui-grid-header-viewport{
    background-color : $GIARTE_GRAY !important;
  }
  //.ui-grid-header,.ui-grid-header-cell,
  .ui-grid-cell:not(.ui-grid-header-cell) {
    border-bottom: 1px solid #fff !important;
    border-right: none !important;;
    box-sizing: border-box;
  }
 .ui-grid-header {
    border-bottom: 1px solid #fff !important;
    border-right: none !important;
   /*   width:96% !important; */
   margin-right:17px !important;
  }
  .ui-grid-header-cell {
    border-right: none !important;
  }
  .ui-grid-viewport{
    overflow-x: hidden !important;
    overflow-y: auto !important;
  }
  .ui-grid-row{
    border-bottom:1px solid #fff !important;
    box-sizing: border-box;
  }
  .ui-grid-pinned-container .ui-grid-viewport{
    overflow-x: hidden !important;
    overflow-y: hidden !important;
  }
  .ui-grid-icon-ok:before{
    content : '' !important;
    width: 10px;
    height: 10px;
    background-color : #ffffff;
  }
  //.ui-grid-selection-row-header-buttons {
  //  cursor: pointer;
  //  //opacity: 0.6;
  //  background-color : #000000 !important;
  //}

}

