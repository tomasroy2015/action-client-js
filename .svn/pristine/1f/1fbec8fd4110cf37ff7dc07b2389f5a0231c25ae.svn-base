.map-view-container {

    width: 100%;
    height:100%;
}
.map-container{
    padding-top: 0px;
    width: 100%;
    margin-top: 0px;
    height:100%;
    min-height:100%;
}

.background {
    fill: none;
    pointer-events: all;
}
.feature {
    fill: #ccc;
    stroke: #fff;
    /*stroke-width: 1px;*/
    cursor: pointer;

}

.feature:hover{
    /*stroke: #fff;*/
    /*stroke-width: 1.5px;*/
}
.text{
    font-size:10px;
    text-transform:capitalize;
}

.hidden {
    display: none;
}
div.map-tooltip.tooltip {
    color: #222;
    background: #fff;

    /*text-shadow: #f5f5f5 0 1px 0;*/
    border-radius: 2px;
    box-shadow: 0px 0px 2px 0px #a6a6a6;
    opacity: 0.9;
    position: absolute;
}
div.tip-header{
    background: #000000;
    padding: .5em;
}
div.content{
    color: #fff;
}
.graticule {
    fill: none;
    stroke: #bbb;
    stroke-width: .5px;
    stroke-opacity: .5;
}
.equator {
    stroke: #ccc;
    stroke-width: 1px;
}
.regionNameContainer{
    font-weight: bold;
    color: #fff;
    font-size: 14px;
}
.serviceAreaContainer{
    font-weight: normal;
    font-size: 10px;
    color: #fff;
    width: 210px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.footer{
    font-size: 10px;
    margin-left: 5px;
}