@import '../Shared/SCSS/_Colors';
@import '../Shared/SCSS/_Mixins';

$left-arrow-width:16px;
$left-arrow-height:20px;
$top-margin-length:16px;

.container{
  background-color: #ffffff;
}
.container.more-settings-container{
  color: #000000;
  width: 230px;
  height: 455px;
  font-family: "AkkuratStd-Regular", "Segoe UI Light", Frutiger, "Frutiger Linotype", "Dejavu Sans", "Helvetica Neue", Arial, sans-serif;
  border: 1px solid #c0c0c0;
  border-radius: 2px;
  top: 250px;
  box-shadow: 2px 2px 2px #d3d3d3;
  cursor: default;
}
.page-header {
  margin: 10px 0 0px;
  border-bottom: 1px solid #000000;
}
.page-header.moresettings-page-header{
  font-size: 14px;
  height: 30px;
  font-weight: bold;
  .more-settings-arrow-container {
    position: absolute;
    top: $top-margin-length;
    right: -15px;
    text-align:center;
    box-shadow: 2px 2px 2px #d3d3d3;
    height: $left-arrow-height;
    width:$left-arrow-width;
    background-color: #fff;
    border-top: 1px solid #d3d3d3;
    border-bottom: 1px solid #d3d3d3;
    border-right: 1px solid #d3d3d3;
    .fa-caret-left{
      font-size:1.2em;
      display:table-cell;
      vertical-align:middle;
      height: $left-arrow-height;
      width:$left-arrow-width;
      color: #555759;
    }
    &:hover {
      cursor : pointer;
    }
  }
}
.more-settings-body{
  font-size: 11px;
}
.radio.moresettings-radio{
  font-weight: normal;
}
.common-moresettings-style{
  margin: 2px 0 0px;
  border: none;
  border-bottom: 1px solid #000000;
}
.more-settings-body > .more-settings-panel-container{
  margin: 2px 0 0px;
  border: none;
  border-bottom: 1px solid;
  height: 100px;
}
.more-settings-body > .custom-value-container{
  margin: 2px 0 0px;
  border: none;
  border-bottom: 1px solid  #d3d3d3;
}
.more-settings-body > .more-settings-panel-container > .moresettings-value-container{
  background-color: #d3d3d3;
  border: none;
  height: 60px;
}

.more-settings-body > .color-settings-panel-container{
  margin: 2px 0 0px;
  border: none;
  border-bottom: 1px solid #000000;
  height: 154px;
}
.more-settings-body > .color-settings-panel-container > .color-set-container{
  background-color: #d3d3d3;
  border: none;
  height: 110px;
}

.more-settings-body > .more-settings-panel-container > .moresettings-value-container > .moresettings-radio-group {
  padding-top: 2px;
  padding-left: 10px;
}
.colorset-ul {
  margin-left: -38px;
  margin-top: -2px;
}
.color-coll-div{
  margin-top: -16px;
  margin-left: 85px;
}
.color-coll-li{
  height: 14px;
}
.more-settings-body > .color-settings-panel-container > .color-set-container > .moresettings-radio-group {
  padding-top: 2px;
  padding-left: 10px;
}

.moresettings-button-container{
  color: #ffffff;
  display: block;
  text-align: center;
  font-size: 14px;
}

.btn-moresettings-ok {
  margin-top: 8px;
  padding-top: 2px;
  height: 22px;
  width: 40px;
  border: none;
  background: #878787 !important;
}

.btn-moresettings-ok:hover {
  background : #555759 !important;
}
