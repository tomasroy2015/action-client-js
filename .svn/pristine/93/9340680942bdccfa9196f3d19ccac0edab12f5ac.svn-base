.full-scorecard-container {
  width: 100%;
  height: 100%;
  position: relative; }

.full-scorecard-header-container {
  width: 100%;
  height: 30px;
  background: #555759;
  position: absolute;
  top: 0; }

.left-arrow-container {
  position: absolute;
  background: #555759;
  right: -16px;
  bottom: 0;
  text-align: center;
  -webkit-box-shadow: 0 0 4px 2px rgba(85, 87, 89, 0.5);
  -moz-box-shadow: 0 0 4px 2px rgba(85, 87, 89, 0.5);
  box-shadow: 0 0 4px 2px rgba(85, 87, 89, 0.5);
  height: 20px;
  width: 16px; }
  .left-arrow-container .fa-caret-left {
    color: #fff;
    font-size: 1.2em;
    display: table-cell;
    vertical-align: middle;
    height: 20px;
    width: 16px; }
  .left-arrow-container:hover {
    cursor: pointer; }
    .left-arrow-container:hover .fa-caret-left {
      color: rgba(255, 255, 255, 0.7); }

.full-scorecard-content-container {
  width: 100%;
  height: 95%;
  position: absolute;
  top: 30px;
  overflow: auto;
  opacity: 0; }

.ease-in-effect {
  opacity: 1;
  transition: opacity 200ms ease-in; }

.ease-out-effect {
  opacity: 0;
  transition: opacity 400ms ease-out; }

.general-survey-wrapper, .trigger-survey-wrapper {
  width: 100%; }

