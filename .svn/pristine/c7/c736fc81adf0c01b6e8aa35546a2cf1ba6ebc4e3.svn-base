/* Variables
======================================================*/
.full-scorecard-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.full-scorecard-header-container {
  width: 100%;
  height: 30px;
  background: #555759;
  position: absolute;
  top: 0;
}

.left-arrow-container {
  position: absolute;
  background: #555759;
  right: -16px;
  bottom: 0;
  text-align: center;
  -webkit-box-shadow: 0 0 4px 2px rgba(85, 87, 89, 0.5);
  -moz-box-shadow: 0 0 4px 2px rgba(85, 87, 89, 0.5);
  box-shadow: 0 0 4px 2px rgba(85, 87, 89, 0.5);
  height: 20px;
  width: 16px;
}
.left-arrow-container .fa-caret-left {
  color: #fff;
  font-size: 1.2em;
  display: table-cell;
  vertical-align: middle;
  height: 20px;
  width: 16px;
}
.left-arrow-container:hover {
  cursor: pointer;
}
.left-arrow-container:hover .fa-caret-left {
  color: rgba(255, 255, 255, 0.7);
}

.full-scorecard-body-wrapper {
  opacity: 0;
}

.ease-in-effect {
  opacity: 1;
  transition: opacity 200ms ease-in;
}

.ease-out-effect {
  opacity: 0;
  transition: opacity 400ms ease-out;
}

.denotes-legend {
  display: inline;
  left: 715px;
  position: absolute;
  top: 40px;
  font-size: 0.9em;
  opacity: 0.7;
}

