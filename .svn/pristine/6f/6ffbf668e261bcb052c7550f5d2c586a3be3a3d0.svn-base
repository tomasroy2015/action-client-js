.scorecard-header-title-container{
  position : relative;
  display:block;
  .fsc-double-target-wrapper{
    position: absolute;
    display: inline-block;
    left: 668px;
    color :rgba(#555759,0.7);
    font-size: 0.90em;
    //border : 1px solid red;
    width: 250px;
    text-align: right;
    line-height:14px;
    .fsc-target-legend{
      display: inline;
      position : relative;
      &:before{
        content: '';
        position: absolute;
        margin-left: -10px;
        width:$DOUBLE_TARGET_LEGEND_WIDTH;
        height:$DOUBLE_TARGET_LEGEND_HEIGHT;
        //border:1px solid;
        background:#555759;
        top:0;
      }
      &:after{
        content: '/';
        position: absolute;
        padding-left: 10px;
        top:0;
        //width:3px;
        //height:15px;
        //border:1px solid;
        //background:#555759;
      }
    }
    .fsc-double-target-legend{
      display: inline;
      position : relative;
      padding-left: 30px;
      &:before{
        content: '';
        position: absolute;
        margin-left: -10px;
        width:$DOUBLE_TARGET_LEGEND_WIDTH;
        height:$DOUBLE_TARGET_LEGEND_HEIGHT;
        //border:1px solid;
        background:rgba(#555759,0.5);
        top:0;
      }
    }
  }
}