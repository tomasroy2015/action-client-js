@import "_colors";
$DOUBLE_TARGET_LEGEND_WIDTH:3px;
$DOUBLE_TARGET_LEGEND_HEIGHT:10px;

.scorecard-details-wrapper {
  position : relative;
  width    : 100%;
  //height   : 100%;
  //overflow : auto;
  //background : #ff0000;
  ul{
    padding:0;
    margin:0;
  }
}

.scorecard-header-container {
  width  : 100%;
  height : 62px;
  margin : 18px 0 0 18px;
  //border : 1px solid green;
  //border-bottom : 1px solid #000000;
  .scorecard-header-title {
    font-size   : 1.4em;
    font-weight : bold;
  }
  .scorecard-sub-header-title-container {
    display : inline-block;
    //border:1px solid blue;
    .os-ratio-container{
      float: right;
      font-size: 12px;
      font-weight: bold;
      height: 26px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      width: 310px;
      margin-top: 16px;
      margin-left: 36px;
      .ratioContainer{
        .ratioLabelContainer{
          .ratio-label{
            color:#878787;
          }
        }
      }
    }
    .sub-header-title-wrapper {
      display: inline-block;
      .scorecard-sub-header-title{
        display: block;
        font-weight : bold;
      }
      .scorecard-sub-header-evaluation{
        display: block;
        font-size: 0.9em;
        color : $GIARTE_GRAY;
      }

    }
    .scorecard-header-score-wrapper{
      display: inline-block;
      margin-left: 50px;
    }

  }
}

