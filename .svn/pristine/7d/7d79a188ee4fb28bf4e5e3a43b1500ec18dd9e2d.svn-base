@import '_Colors';
@import '_Mixins';

.modal{
  overflow-y: hidden;
  text-align: center;
}

.modal:before {
  display: inline-block;
  vertical-align: middle;
  content: " ";
  height: 100%;
}
.modal-dialog {
  display: inline-block;
  text-align: left;
  vertical-align: middle;
}
.evaluationSummaryContainer{
  height: 450px;
  width: 100%;
  background-color: #dddddd;
}
.evaluationSummaryHeader{
  width: 100%;
  height: 18px;
  background-color: #000000;
  color: white;
  .close {
    margin: 1px 5px 1px 0px;
    opacity: 1;
    background-color: white;
    border-radius: 50%;
    width: 17px;
    height: 17px;
    font-size: 17px;
  }
}
.btn.ac-btn-right-evaluation-summary {
  height         : 18px;
  font-size      : 0.9em;
  position       : absolute;
  left           : 350px;
  background     : black;
  color          : transparent;
  padding-top    : 0;
  padding-bottom : 0;
  padding-left   : 5px;
  border-radius  : 0;
  box-shadow     : none;
  width          : 50px;
}
.btn.ac-btn-left-evaluation-summary {
  height         : 18px;
  font-size      : 0.9em;
  position       : absolute;
  left           : 175px;
  background     : black;
  color          : transparent;
  padding-top    : 0;
  padding-bottom : 0;
  padding-left   : 5px;
  border-radius  : 0;
  box-shadow     : none;
  width          : 50px;
}
