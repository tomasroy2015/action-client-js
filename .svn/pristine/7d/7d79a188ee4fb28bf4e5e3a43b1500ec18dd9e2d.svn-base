.circle-arrow-right-size-2x {
  vertical-align : middle;
  padding-left   : 10px;
  font-size      : 1.5em;
  color:  white;
}
.circle-arrow-left-size-2x {
  vertical-align : middle;
  padding-left   : 10px;
  font-size      : 1.5em;
  color:  white;
}
.span-evaluation-count-container{
  position: absolute;
  left: 250px
}
.headerContentContainer{
  align-self: center;
  width: 90%;
  margin: auto;
  color: white;
}
.questionListContainer{
  width: 45%;
  float: left;
}
.questionListHeader{
  margin: 5px 0px 0px 10px;
  font-size: 18px;
  height: 25px;
  width: 250px;
  max-width: 250px;
  overflow: hidden;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.questionListDetails {
  background-color: white;
  height: 385px;
  margin: 5px 0px 5px 10px;
}
.evaluationSummaryContent{
  width: 100%;
  height: 95%;
}

.othersInfoContainer{
  width: 50%;
  float: right;
  //margin: 5px 0px 5px 10px;
  .divLabelContainer{
    height: 20px;
    margin: 5px 0px 0px 0px;
  }
}
.otherInfoHeader{
  height: 25px;
  margin-top: 5px;
}

.regRemarksContainer{
  background-color: white;
  height: 80px;
  margin-top: 5px;
  font-size: 10px;
  overflow: auto;
}

.additionalRemarksWrapper{
  height: 100px;
}

.adiRemarksContainer{
  background-color: white;
  height: 80px;
  font-size: 10px;
  overflow: auto;
}
.attributeValueWrapper{
  height: 185px;
}
.attributeValueContainer{
  background-color: white;
  height: 175px;
  overflow: auto;
}

.headerLabel{
  vertical-align: bottom;
  float: left;
}
.translationDiv{
  float: right;
  .btn {
    width         : 30px;
    height        : 18px;
    line-height   : 18px;
    padding       : 0;
    margin-bottom : 0;
    margin-right  : 2px;
    font-size     : 1em;
    font-weight   : bold;
    color         : black;
    border        : 1px solid transparent;
    border-radius : 0;
    box-shadow    : none;
    background-color: lightgrey;
  }

  .btn-primary {
    background-color : darkgray;
  }
}
.attributeLabel{
  font-weight: bold;
}
.attributeList{
  display: table;
  width: 100%;
  padding: 0px;
  margin: 0px;
  position: relative;
}
.columnLeft{
  float: left;
}
.columnRight{
  float: right;
}
.attributeItemWrapper{
  margin-bottom: 5px;
}
