.vscrollbar {
    overflow-x: hidden; /*for hiding horizontal scroll bar*/
    overflow-y: auto; /*for vertical scroll bar*/
}

/*list pagination */
.pagination {
    display: inline-block;
    border-radius: 1px;
    padding: 0;
    margin-bottom: 3px;
    margin-top: -10px;
}

/*Question score box style*/
.horizontal {
    display: inline;
    float: left;
}

/*list view minimum evaluation number input type style*/
.btn-apply {
    height: 22px;
    border: none;
    border-radius: 0;
    background: #878787 !important;
    margin-left: -3px;
    padding-top: 2px;
    color: white;
    width: 58px;
}

/**:focus {*/
/*outline: 0 !important;*/
/*}*/

.btn-apply:hover {
    background: #555759 !important;
}

.reset-filter-evaluation {
    display: inline-block !important;
    margin-left: 5px !important;
    width: 70px !important;
    cursor: pointer;
}

.reset-filter-button {
    height: 22px;
    width: 71px;
    border: none;
    border-radius: 0;
    background: transparent !important;
}

.reset-filter-button:hover {
    background: #c8c8c8 !important;
}

input[type="number"]::-webkit-outer-spin-button,
input[type="number"]::-webkit-inner-spin-button {
    -webkit-appearance: none !important;
    margin: 0 !important;
}

input[type="number"] {
    -moz-appearance: textfield !important;
}

button[disabled], html input[disabled] {
    background: transparent !important;
    opacity: 0.6 !important;
    -ms-filter: alpha(opcity=40) !important;
    filter: alpha(opcity=40) !important;

}

button[disabled]:hover {
    background: transparent !important;
}

