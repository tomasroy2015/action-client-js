/*start*/
.selectedScoreQuestionListItemDiv {
  cursor: pointer;
  background-color : $GIARTE_YELLOW;
  position         : relative;
  height           : 100%;
  width            : 250px;
}

/*list item style*/
.attribute-questionContainerDiv {
  padding   : 0;
  margin    : 0;
  width     : 250px;
  float     : left;
  height    : $score-item-height;
  font-size : 11px;
}

.attribute-questionLabelDiv {
  text-align    : left;
  margin-top    : 4px;
  width         : 150px;
  float         : left;
  overflow      : hidden;
  white-space   : nowrap;
  text-overflow : ellipsis;
  margin-right  : 3px;
  padding-left  : 4px;
}

.attribute-questionScoreDiv1 {
  margin-top  : 0px;
//  width       : 30px;
  display     : inline-block;
  float       : left;
  font-weight : bold;
}

.canvasContainer {
  height : 28px;
}

.attribute-questionScorebar {
  background-color : transparent;
  padding-left     : 0;
  padding-right    : 0;
  margin-left      : 0;
  margin-right     : auto;
  display          : block;
  float            : left;
  top              : 5px
}

.attribute-questionText {
  color : #000000;
}

ul li {
  list-style : none;
}

ul.attribute-question li[data-questionType='group'] {
  width: 250px;
  background: #ddddde;
  font-weight:bold;
  margin-bottom:8px;
}
ul.attribute-question li[data-questionType='group']:hover{
  background:transparent;
}


ul.attribute-question li[data-questionType='group'].selectedScoreQuestionItem{
  background:transparent;
}

ul.attribute-question > li[data-questiontype='group']{
  margin-top:8px;
  color:red;
}

ul.attribute-question > li[data-questiontype='group']:first-child{
  margin-top:0;
}


