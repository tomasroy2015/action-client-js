/* All Mixins Imports Sections
======================================================*/
@import '_Colors';

/* Mixins
======================================================*/
@mixin text-truncate{
  text-overflow:ellipsis;
  overflow:hidden;
  white-space: nowrap;
}
@mixin v-center{
  display:table-cell;
  vertical-align:middle;
}
/* Page styles
======================================================*/



.scorecard-main-wrapper{
  background-color: $GIARTE_WHITE;
  width:298px;
  font-size:1em;
  position: relative;
  top : 0;
  > .ac-list-group {
    padding-left: 0;
    margin-bottom: 20px;

    .ac-list-group-item {
      position: relative;
      display: block;
      padding: 2px 4px;
      margin-bottom: -1px;
      //background-color: #fff;
      &:last-child {
        margin-bottom: 0;
      }
    }
  }
}

.ac-list-group-item {
  .question-wrapper{
    //display: block;
    height:25px;
    line-height:25px;
    //border : 1px solid;
    .question-text{
      display:inline-block;
      //border:1px solid red;
      width: 152px;
      @include text-truncate;
      vertical-align:middle;
    }
  }
  .ac-list-group-item-scorebar{
    display: inline-block;
    vertical-align:middle;
  }
}
/* Header section
======================================================*/
.header-container{
  width:100%;
  height:32px;
  line-height:32px;
  background:$GIARTE_LIGHT_GRAY;
  //display:table;
  position:relative;
  margin-bottom:2px;
  .main-title-container {
    height:18px;
    line-height:18px;
  }
  .sub-title-container{
    height:14px;
    line-height:14px;
    font-size:.9em;
    margin-top:-1px;
  }
  .main-title,.sub-title{
    width:185px;
    max-width:185px;
    padding-left:5px;
    font-weight:bold;
    @include text-truncate;
    //@include v-center;
    display: block;
  }
}


