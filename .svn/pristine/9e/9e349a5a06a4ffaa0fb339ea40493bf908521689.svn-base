            var menuColl=[
                {title:'GENERAL SETTINGS',menuIndex:1},
                {title:'USER ACCOUNTS',menuIndex:2},
                {title:'COUNTRY MAPPING',menuIndex:3},
                {title:'REGION MAPPING',menuIndex:4},
                {title:'SITE CLUSTERING',menuIndex:5},
