                    }
            }
            //$scope.selectedUserSettingsMenu=menuColl;
                //menuColl.push(giarteUserMenu);
            //$scope.currentuser.UserType
            $scope.selectedUserSettingsMenu= _.filter(menuColl,function(item){
                return isMenuItemValid(item);

            });
