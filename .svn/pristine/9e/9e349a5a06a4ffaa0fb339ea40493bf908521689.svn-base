    app.register.controller('customerSettingsController', ['$scope','$rootScope','$modalInstance','accountFactory','$timeout',
        'customerSettingsFactory','UserType','Notify','datasetSelectionFactory',
        function ($scope,$rootScope,$modalInstance,accountFactory,$timeout,customerSettingsFactory,UserType,Notify,datasetSelectionFactory) {
            $scope.selectedCustomer = {};
            $scope.currentuser ={};
            angular.copy(accountFactory.UserData(),$scope.currentuser);
            $scope.sessionID = $scope.currentuser.SessionId;
            var selectedCustomerDataSet = {};
            selectedCustomerDataSet = datasetSelectionFactory.selectedCustomer;
            /*
