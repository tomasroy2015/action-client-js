
"use strict";

define(['application-configuration'], function (app) {

    app.register.directive('actionScoreBox', [function () {
        return {
            restrict: 'AE',
            scope:{
                generalSurveyCollection:'=',
                triggerSurveyCollection:'=',
                scoreDataCollection:'=',
                scoreBarWidth:'=',
                onTabItemClick:'&'
            },
            link:function (scope, el, attrs) {
                scope.onClickDir = function(selectedId){
                    scope.onTabItemClick({selectedId:selectedId});
                };
            },
            templateUrl: 'Views/Shared/Template/ScoreBoxTemplate.html'
        };
    }]);

});