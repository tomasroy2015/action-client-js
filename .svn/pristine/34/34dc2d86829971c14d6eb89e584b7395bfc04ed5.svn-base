/* --------------------------------------------------
                        Dataset.css
-------------------------------------------------- */
html {
    position   : relative;
    min-height : 100%;
}

body {
    /* Margin bottom by footer height */
    margin-bottom : 45px;
    min-height    : 400px;
}

/*-------------------------------------------------
               Bootstrap Override class
-------------------------------------------------*/
.container {
    width     : auto;
    max-width : 680px;
    padding   : 0 15px;
    min-width : 455px;
}

.page-header {
    border-bottom : none;
}

/*-------------------------------------------------
             End of Bootstrap Override class
 -------------------------------------------------*/

/*-------------------------------------------------
                Login Control Panel
-------------------------------------------------*/
.panel {
    border-radius : 0;
}

.panel-default {
    opacity       : 0.9;
    height        : 350px;
    width         : 425px;
    margin-left   : auto;
    margin-right  : auto;
    border-radius : 0;
}

.form-group.last {
    margin-top: 3px;
    margin-left: 180px;
}

.panel-body {
    padding : 15px;

}

.panel-default > .panel-heading {
    background-image : url('');
    background-color : #000 !important;
    color            : #fff !important;
    height           : 57px;
    line-height      : 42px;
    font-size        : 18px;
    border-radius    : 0;
}

.logo {
    float        : right;
    margin-top   : 10px;
    margin-right : 10px;
}

.content-heading {
    font-weight : bold;
    font-size   : 18px;
    color       : #555759;
}

.content-heading-context {
    margin    : 10px 0;
    font-size : 13px;
    color     : #555759;
    text-wrap : normal;
}

.padding-left-label-text {
    text-align : left !important;
}

.login-text-box {
    height        : 24px;
    border-radius : 0;
}

.btn-create {
    height        : 24px;
    border        : none;
    border-radius : 0;
    background    : #878787 !important;
}

.btn-create:hover {
    background : #555759 !important;
}

.form-group.checkbox-panel
{
   margin-left: 40px;
    margin-top: 5px;
}
.combo-position
{
    width:150px;
    margin-left:2px;
    padding-top:5px;
}
/*-------------------------------------------------
            End of dataset Panel
-------------------------------------------------*/

/*-------------------------------------------------
                    Footer Panel
-------------------------------------------------*/
.footer {
    position         : absolute;
    bottom           : 0;
    width            : 100%;
    /* Set the fixed height of the footer here */
    height           : 45px;
    background-color : #555759;
    min-width        : 455px;
    left             : 0;
}

.url-container {
    right     : 60px;
    position  : absolute;
    transform : translateY(100%);
}

.right-arrow-container {
    right     : 34px;
    position  : absolute;
    transform : translateY(69%);
}

.arrow-container {
    right     : 36px;
    position  : absolute;
    transform : translateY(90%);
}

.url-container > a {
    text-decoration : none;
    color           : #fff;
}

.url-container > a:hover {
    text-decoration : none;
    color           : #ddddde;
}

/*-------------------------------------------------
                End of Footer Panel
-------------------------------------------------*/

/*-------------------------------------------------
                Media Query Section
-------------------------------------------------*/
@media only screen and (min-width : 480px) {
    .page-header {
        top         : 50%;
        left        : 50%;
        position    : absolute;
        margin-left : -212.5px;
        margin-top  : -197.5px;
    }
}

/*-------------------------------------------------
            End of Media Query Section
-------------------------------------------------*/









