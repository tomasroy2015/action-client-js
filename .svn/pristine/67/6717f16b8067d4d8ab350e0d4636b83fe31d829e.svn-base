    display: inline-block;
    width: 14px;
    height: 14px;
    border-radius: 10px;
    font-size: 12px;
    color: #000;
    line-height: 15px;
    text-align: center;
    background: #FFED00;
    padding: 1px;
    margin-right: 5px;
    font-family: AkkuratStd-Regular;
}