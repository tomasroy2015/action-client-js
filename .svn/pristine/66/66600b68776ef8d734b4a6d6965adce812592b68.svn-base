$default-text-color:#000;

html {
  position   : relative;
  min-height : 100%;
}

body {
  /* Margin bottom by footer height */
  margin-bottom : 45px;
  min-height    : 400px;/*400px*/
  color:$default-text-color;
}


.dataset-container {
  max-width : 680px;
  padding   : 0 15px;
  min-width : 455px;

   .page-header {
     border-bottom : none;
     .panel {
       border-radius : 0;
       &.panel-default {
         opacity       : 0.9;
         height        : 380px;/*350px*/
         width         : 425px;
         margin-left   : auto;
         margin-right  : auto;
         border-radius : 0;
       }
     }
   }
}

.panel-heading{
  background-image : url('');
  background-color : #000 !important;
  color            : #fff !important;
  height           : 57px;
  line-height      : 42px;
  font-size        : 1.416666666666667em;
  /* 17px/12px */
  text-shadow: none;
  border-radius    : 0;
   .logo {
    float        : right;
    margin-top   : 10px;
    margin-right : 10px;
  }
}


.panel-body-container {
  padding : 18px;
  .content-heading {
    font-weight : bold;
    font-size   : 1em;
    font-weight : bold;
