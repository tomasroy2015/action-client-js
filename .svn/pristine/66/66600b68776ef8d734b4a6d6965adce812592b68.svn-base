.checkbox-panel {
  margin-top    : 10px;
  padding-left  : 25px;
  padding-right : 25px;
}

.button-container {
  position:relative;
  width: 100%;
  height:40px;
}

.btn-white-bg{
  padding-top: 0;
  height: 26px;
  line-height: 26px;
  background-color : #555759;
  color: #fff;
  border-radius: 0;
  &:hover {
    background-color : rgba(#555759,.8);
  }
}

.right-side {
  position: absolute;
  right: 20px;
}

#datePanel {
  margin-top : 10px;
}
.form-horizontal .control-label {
  text-align: left;
}
/*-------------------------------------------------
                    Footer Panel
-------------------------------------------------*/
.footer {
  position         : absolute;
  bottom           : 0;
  width            : 100%;
  /* Set the fixed height of the footer here */
  height           : 40px;
  background-color : #555759;
  min-width        : 455px;
  left             : 0;
  font-size: 0.8333333333333333em; /* 10px/12px */
  letter-spacing: 0.0416666666666667em;
  .url-container {
    right     : 48px;
    position  : absolute;
    transform : translateY(100%);
    > a {
      text-decoration : none;
      color           : #fff;
      :hover {
        color : #ddddde;
      }
    }
  }
}

.right-arrow-container {
  right     : 21px;
  position  : absolute;
  transform : translateY(69%);
}

.arrow-container {
  right     : 23px;
  position  : absolute;
  transform : translateY(90%);
  top:2px;
}

/*-------------------------------------------------
                Media Query Section
-------------------------------------------------*/
@media only screen and (min-width : 480px) {
  .dataset-container {
    .page-header {
      top         : 50%;
      left        : 50%;
      position    : absolute;
      margin-left : -212.5px;
      margin-top  : -197.5px;
    }
  }
}
