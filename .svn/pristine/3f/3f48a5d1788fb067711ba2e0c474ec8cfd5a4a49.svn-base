    background: #fff;
    color: #000;
    padding-top: 0;
    padding-bottom: 0;
    padding-left: 5px;
    border-radius: 0;
    box-shadow: none;
    width: 100px;
    &:hover {
      background: #ddddde;
      .circle-arrow-size-2x {
        @include rounded-arrow-visibility(hidden);
      }
      &:after {
        top: -1px;
        @include arrow-right($arrow-button-height/2, #ddddde, 101);
      }
    }
    &.active {
      background: #fff000;
      width: 119px;
      padding-left: 0;
      .circle-arrow-size-2x {
        @include rounded-arrow-visibility(hidden);
      }
      &:after {
        top: -1px;
        @include arrow-right($arrow-button-height/2, #fff000, 102);
      }
    }
    &:focus,
    &:active {
      -moz-outline-style: none;
      outline-style: none;
      outline: none;
    }
  }
}

