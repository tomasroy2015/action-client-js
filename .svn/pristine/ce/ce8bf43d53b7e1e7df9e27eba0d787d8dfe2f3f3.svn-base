.ui-grid-row:nth-child(odd):hover .ui-grid-cell{background:#ddddde !important}
.ui-grid-row:nth-child(even):hover .ui-grid-cell{background:#ddddde !important}
.ui-grid-row:nth-child(odd) .ui-grid-cell{background:#ffffff !important}
.ui-grid-row:nth-child(even) .ui-grid-cell{background:#ffffff !important}
.ui-grid{border: 0 !important;}
.ui-grid-top-panel {
    position: relative;
    overflow: hidden;
    font-weight: bold;
    background: transparent !important;
}
.ui-grid-header {
    border-bottom: 1px solid !important;
    border-bottom-color: #000000 !important;
    box-sizing: border-box;
    overflow: hidden !important;width: auto !important;
}
.ui-grid-cell {
    overflow: hidden;
    float: left;
    background-color: inherit;
    border-right: 0 !important;
    border-bottom: 1px solid !important;
    border-bottom-color: #ddddde !important;
    box-sizing: border-box;
}
.ui-grid-cell-contents{
    padding-left: 0px !important;
}
.ui-grid-header-cell {
    position: relative;
    box-sizing: border-box;
    border-color: transparent !important;
    background-color: transparent !important;
    border-right: 0px !important;
    /*border-bottom: 1px solid !important;*/
    /*border-bottom-color: #000000 !important;*/
    display: table-cell;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    width: 0;
}
.ui-grid-row:hover .speech {
    background: #ffffff !important;
}
.ui-grid-row:hover .speech:before{
    border-color: #ffffff transparent transparent #ffffff;
}
.name-txt{
    height: 30px;
    margin-top: 4px;
    text-indent: 4%;
    font-weight: bold;
}
.list-item-icon{
    float: left;height: 21px;border:0;margin-right: 10px;
}

