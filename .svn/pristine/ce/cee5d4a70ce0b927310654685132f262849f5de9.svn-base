@import '_Colors';
@import '_Mixins';

.ticket-evaluation-container {
  height: 100%;
  position: relative;
  font-size: 11px;
  font-family: "AkkuratStd-Regular", "Segoe UI Light";
  color: #000000;
  min-height: 120px;
  margin: -5px 0px 0px 2px;
  vertical-align: bottom;

  ul.ticket-question-list-container {
    display: block;
    padding: 0px;
    margin: 16px 0px 0px 2px;
    position: relative;

    li.ticket-question-list {
      display: block;
      position: relative;
      padding: 0px;
      margin: 2px;
      text-align: center;

      .row{
        text-align: left;
        .col-md-10{
          padding-right: 0px;
          padding-top: 4px;
          padding-left: 12px;
          span{
            margin-top: 5px;
          }
        }
        .col-sm-6{
          height: 24px;
          width: 30px;
          background-color: $GIARTE_GREEN;
          color: #ffffff;
          font-size: 14px;
          font-weight: bold;
          text-align: center;
          padding-top: 2px;
          padding-right: 0px;
          padding-left: 8px;

          span{
              margin-left: -8px;
              margin-top: 2px;
          }
        }
      }
    }
  }
}
