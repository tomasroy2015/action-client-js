@import '_Colors';
@import '_Mixins';

.modal{
  overflow-y: hidden;
  text-align: center;
}

.modal:before {
  display: inline-block;
  vertical-align: middle;
  content: " ";
  height: 100%;
}
.modal-dialog {
  display: inline-block;
  text-align: left;
  vertical-align: middle;
}
.evaluationSummaryContainer{
  height: 440px;
  width: 100%;
  background-color: #dddddd;
}
.evaluationSummaryHeader{
  width: 100%;
  height: 20px;
  background-color: #000000;
  color: white;
  .close {
    //margin: 1px 5px 1px 0px;
    //opacity: 1;
