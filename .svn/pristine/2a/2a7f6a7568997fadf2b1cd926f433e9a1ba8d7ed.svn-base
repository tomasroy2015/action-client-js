.circle-arrow-right-size-2x {
  vertical-align : middle;
  padding-left   : 10px;
  font-size      : 1.5em;
  color:  white;
}
.circle-arrow-left-size-2x {
  vertical-align : middle;
  padding-left   : 10px;
  font-size      : 1.5em;
  color:  white;
}
.btn-close-evaluation-summary {
  vertical-align : middle;
  padding-left   : 20px;
  font-size      : 1.4em;
  color:  white;
}
.span-evaluation-count-container{
  position: absolute;
  left: 240px;
  margin-top: 2px;
}
.headerContentContainer{
  align-self: center;
  width: 90%;
  margin: auto;
  color: white;
}
.questionListContainer{
  width: 45%;
  float: left;
}
.questionListHeader{
  margin: 10px 0px 0px 15px;
  font-size: 16px;
  height: auto;
  width: 250px;
  max-width: 250px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.questionListDetails {
  background-color: white;
  height: 375px;
  margin: 3px 0px 5px 15px;

  thead {
    flex-direction: column;
    align-items: stretch;
    display: inline-block;
    width: 250px;
  }

  tbody {
    overflow-y: auto;
    height: 320px;
    display: inline-block;
    width: 250px;
  }
  .table > thead > tr > th {
    vertical-align: middle;
    border: 0px;
    padding: 5px;
  }

  .table > tbody > tr > td, .table > tfoot > tr > td {
    padding: 5px;
    line-height: 12px;
    vertical-align: middle;
    border: 0px;
  }
}
.evaluationSummaryContent{
  width: 100%;
  height: 95%;
}

.othersInfoContainer{
  width: 55%;
  float: left;
  padding-left: 15px;
  padding-right: 15px;
  .divLabelContainer{
    height: 20px;
    margin: 5px 0px 0px 0px;
  }
}
.otherInfoHeader{
  height: 17px;
  vertical-align: bottom;
  margin-top: 18px;
}

.regRemarksContainer{
  background-color: white;
  height: 80px;
  font-size: 10px;
  overflow: auto;
  padding: 5px;
}

.additionalRemarksWrapper{
  height: 100px;
}

.adiRemarksContainer{
  background-color: white;
  height: 80px;
  font-size: 10px;
  overflow: auto;
  padding: 5px;
}
.attributeValueWrapper{
  height: 185px;
}
.attributeValueContainer{
  background-color: white;
  height: 165px;
  overflow: auto;
}

.headerLabel{
  vertical-align: bottom;
  float: left;
}
.translationDiv{
  float: right;
  .btn {
    width         : 30px;
    height        : 16px;
    line-height   : 16px;
    padding       : 0;
    margin :0px 0px 0;
    font-size     : 1em;
    font-weight   : bold;
    color         : black;
    border        : 1px solid transparent;
    border-radius : 0;
    box-shadow    : none;
    background-color: lightgrey;
  }

  .btn-primary {
    background-color : darkgray;
  }
}
.attributeLabel{
  font-weight: bold;
}
.attributeValue{
  width: 150px;
}
.truncatedText{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.attributeList{
  display: table;
  width: 100%;
  padding: 0px;
  margin: 0px;
  position: relative;
}
.columnLeft{
  float: left;
  width: 50%;
  padding: 3px;
}
.columnRight{
  float: right;
  width: 50%;
}
.attributeItemWrapper{
  margin-bottom: 5px;
}
.labelColumn{
  width: 200px;
}

.evaluationSummaryDataContainer {
  border-bottom: 1px solid black;
  height: 30px;
  padding-top: 4px;
  .questionNumber{
    font-weight: bold;
    font-size: 14px;
  }
  .questionText{
    font-size: 10px;
    margin-left: 5px;
  }
}

.evaluationSummaryScoreBoxContainer{
  width: 40px;
  padding-left: 10px;
  border-bottom: 1px solid black;
  height: 30px;
}


