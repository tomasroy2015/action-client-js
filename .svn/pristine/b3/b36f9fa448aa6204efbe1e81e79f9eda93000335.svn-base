                        var mapArrow = $('#map-view-summary').find('#selected-summary-arrow');
                        $(mapArrow).addClass('score-summary-arrow-selected').removeClass('evaluation-summary-arrow-selected');
                    }else if(scope.fromView == 'listview'){
