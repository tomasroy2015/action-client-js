a.list-group-item:hover {
    color            : #555;
    text-decoration  : none;
    background-color : #f5f5f5;
}

/* Reset filter section
======================================================*/
.reset-filter {
    padding : 15px 6px;
}

.btn-reset {
    text-decoration : none;
    float           : right;
    color           : #000000;
    background      : transparent;
}

.btn-reset img {
    padding-left : 5px;
}

.reset-filter > .btn-default {
    text-shadow   : none;
    border-color  : transparent;
    box-shadow    : none;
    border-radius : 0;
}

.btn-reset:focus {
    -moz-outline-style : none;
    outline-style      : none;
    outline            : none;
    background         : transparent;
}

.btn-reset:active,
.btn-reset:hover {
    background : #ddddde;
}



