.speech{
    position: relative;
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 5px;
    padding-bottom: 5px;
    text-align: center;
    height: 24px;
    background-color: #c8c8c8;
    border: 0px solid #c8c8c8;
    -webkit-border-radius: 0px;
    -moz-border-radius: 0px;
    border-radius: 0px;
    display: inline-block;
}
.speech:before
{
    content: ' ';
    position: absolute;
    width: 0;
    height: 0;
    left: 40%;
    top: 17px;
    border: 6px solid;
    border-color: #c8c8c8 transparent transparent #c8c8c8;
}
