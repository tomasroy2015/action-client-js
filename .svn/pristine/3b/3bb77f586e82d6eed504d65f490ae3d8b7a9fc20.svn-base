$gap-between-container : 15px;

.logo-container {
  width         : 100%;
  margin-top    : $gap-between-container;
  margin-bottom : $gap-between-container;
  height        : 60px;
}

img.logo {
  width  : 233px;
  height : 60px;
  margin : 0 auto;
}

.dataset-container, .data-filter-accordion-container {
  margin-bottom : $gap-between-container;
}

.service-area-container {
  padding-top : 10px;
  span {
    padding-left : 5px;
    font-weight  : bold;
    color        : #000;
  }
}

.nav-tabs > li > a {
  height           : 32px;
  margin-right     : 2px;
  line-height      : 1.42857143;
  border           : none;
  border-radius    : 0;
  background-color : #ddddde;
  color            : #000;
}

.nav-tabs > li.active > a, .nav-tabs > li.active > a:focus, .nav-tabs > li.active > a:hover {
  color               : #000;
  cursor              : default;
  background-color    : #fff;
  border              : none !important;
  border-bottom-color : transparent !important;
}

.ac-collasped-panel, .ds-collasped-panel {
  font-size     : 0.9em;
  color         : #000;
  border-bottom : 1px solid;
  margin-bottom : 5px;
  cursor        : pointer;
}

/* Left menu dataset seletion
======================================================*/
.dataset-selection {
  height       : 30px;
  position     : relative;
  line-height  : 30px;
  text-align   : left;
  padding-left : 10px;
  color        : #000;
  background   : #c6c6c6;
  width        : 200px;
  &:hover {
    //    width      : 98%;
    background : rgba(#c6c6c6, 0.4);
    &:before {
      border-color : transparent transparent transparent rgba(#c6c6c6, 0.4);
    }
    &:after {
      border-color : transparent transparent transparent #fff;
    }
  }
  &:after, &:before {
    content      : "";
    display      : inline-block;
    border-width : 15.5px;
    border-style : solid;
    width        : 0px;
    height       : 0px;
    left         : 100%;
    top          : 0;
    position     : absolute;
    z-index      : 1;
  }
  &:after {
    border-color : transparent transparent transparent #c6c6c6;
  }

  &:before {
    border-width : 15.5px;
    display      : block;
    border-color : transparent transparent transparent #c6c6c6;
    z-index      : 2;
    top          : 0px;
  }
}

