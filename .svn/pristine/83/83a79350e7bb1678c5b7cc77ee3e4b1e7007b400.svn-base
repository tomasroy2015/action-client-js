/* All external import files
======================================================*/
@import '_Colors';
@import '_Mixins';

$score-item-height:24px;
$calculate-right:11px;
//$calculate-right: calc(#{$score-item-height/2} - 1px);

ul.attribute-question {
  display: block;
  width: 258px;
  padding: 0px;
  margin: 0px 0px 0px 2px;
  position: relative;
  min-height: 250px;
  overflow-y: auto;
  overflow-x: hidden;
  max-height: 318px;
  li.attribute-questionListItem {
    display    : block;
    height     : $score-item-height;
    position   : relative;
    padding    : 0px;
    margin-bottom: 4px;
    text-align : center;
    width       : 250px;
    &:not(.selectedScoreQuestionListItemDiv):hover {
      background-color : $GIARTE_LIGHT_GRAY;
      cursor           : pointer;
      width       : 250px;
    }

    .attribute-questionListItemDiv{
      .attribute-questionContainerDiv {
        padding: 0;
        width: 250px;
        float: left;
        height: $score-item-height;
        font-size: 11px;
        text-align: center;

        .attribute-questionLabelDiv {
          text-align: left;
          width: 150px;
          float: left;
          overflow: hidden;
          white-space: nowrap;
          text-overflow: ellipsis;
          margin-right: 3px;
          padding-left: 4px;
          padding-top: 4px;
        }

        .attribute-questionScoreDiv1 {
          margin-top  : 0px;
          //  width       : 30px;
          display     : inline-block;
          float       : left;
          font-weight : bold;
        }

        .attribute-questionText {
          color : #000000;
        }
      }
    }
  }

  .overall-summary-bar-container{
    font-size: 11px;
    color: #000000;
    margin: 5px 0px 0px 6px;
    height: 45px;

    .overall-scorebar-container{
      font-size: 12px;
      border-bottom: 2px solid #d3d3d3;
      font-weight: bold;
    }
    .overall-score-div{
      display: inline-flex;
      margin-top: 4px;
      .customized-bar-position{
        margin: -5px 0px 0px 124px;
      }
    }
  }

  li[data-questionType='group'] {
    width: 250px;
    background: #ddddde;
    font-weight: bold;
  }

  .questionScoreListItemDiv {
    position    : relative;
    height      : 100%;
    width       : 250px;
  }
}

.selectedScoreQuestionListItemDiv {
  cursor: pointer;
  background-color : $GIARTE_YELLOW;
  position: relative;
  height: 24px;
  width: 250px;
}



