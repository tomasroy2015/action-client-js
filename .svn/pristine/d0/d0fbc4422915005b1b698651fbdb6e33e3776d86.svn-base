
.evaluation-summary-open {
    overflow: hidden;
}
.evaluation-summary {
    position: fixed;
    top: 180px;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1040;
    display: none;
    overflow: hidden;
    -webkit-overflow-scrolling: touch;
    outline: 0;
}
.evaluation-summary.fade .evaluation-summary-dialog {
    -webkit-transition: -webkit-transform .3s ease-out;
    -o-transition:      -o-transform .3s ease-out;
    transition:         transform .3s ease-out;
    -webkit-transform: translate(0, -25%);
    -ms-transform: translate(0, -25%);
    -o-transform: translate(0, -25%);
    transform: translate(0, -25%);
}
.evaluation-summary.in .evaluation-summary-dialog {
    -webkit-transform: translate(0, 0);
    -ms-transform: translate(0, 0);
    -o-transform: translate(0, 0);
    transform: translate(0, 0);
}
.evaluation-summary-open .evaluation-summary {
    overflow-x: hidden;
    overflow-y: auto;
}
.evaluation-summary-dialog {
    position: relative;
    width: auto;
    margin: 10px;
}
.evaluation-summary-content {
    position: relative;
    background-color: #fff;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
    border: 1px solid #999;
    border: 1px solid rgba(0, 0, 0, .2);
    border-radius: 6px;
    outline: 0;
    -webkit-box-shadow: 0 3px 9px rgba(0, 0, 0, .5);
    box-shadow: 0 3px 9px rgba(0, 0, 0, .5);
}
.evaluation-summary-backdrop {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: #000;
}
.evaluation-summary-backdrop.fade {
    filter: alpha(opacity=0);
    opacity: 0;
}
.evaluation-summary-backdrop.in {
    filter: alpha(opacity=50);
    opacity: .5;
}
.evaluation-summary-header {
    min-height: 16.42857143px;
    padding: 15px;
    border-bottom: 1px solid #e5e5e5;
    background-color:black;
    color:white;
}
.evaluation-summary-header .close {
    margin-top: -2px;
    color:white;
}
.evaluation-summary-title {
    margin: 0;
    line-height: 1.42857143;
}
.evaluation-summary-body {
    position: relative;
    padding: 15px;
}
.evaluation-summary-footer {
    padding: 4px;
    text-align: left;
    border-top: 1px solid #e5e5e5;
    background-color:gray;
    color:white;
}
.evaluation-summary-footer .btn + .btn {
    margin-bottom: 0;
    margin-left: 5px;
}
.evaluation-summary-footer .btn-group .btn + .btn {
    margin-left: -1px;
}
.evaluation-summary-footer .btn-block + .btn-block {
    margin-left: 0;
}
.evaluation-summary-scrollbar-measure {
    position: absolute;
    top: -9999px;
    width: 50px;
    height: 50px;
    overflow: scroll;
}
@media (min-width: 768px) {
    .evaluation-summary-dialog {
        width: 300px;
        margin: 30px auto;
    }
    .evaluation-summary-content {
        -webkit-box-shadow: 0 5px 15px rgba(0, 0, 0, .5);
        box-shadow: 0 5px 15px rgba(0, 0, 0, .5);
    }
    .evaluation-summary-sm {
        width: 300px;
    }
}
@media (min-width: 992px) {
    .evaluation-summary-lg {
        width: 900px;
    }
}
