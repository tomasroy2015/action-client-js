.search-box,.close-icon,.search-wrapper {
  position: relative;
}
.search-input-wrapper {
  width: 200px;
  margin: auto;
  float: left;
}
.search-button-wrapper{
  float: left;
}
.search-box {
  width: 100%;
  outline: 0;
  &:not(:valid) ~ .close-icon {
    display: none;
  }
}


.close-icon {
  border:1px solid transparent;
  background-color: transparent;
  display: inline-block;
  vertical-align: middle;
  outline: 0;
  cursor: pointer;
  position: absolute;
  margin-left: 175px;
  margin-top: -14px;
  &:after{
    content: "X";
    display: block;
    width: 15px;
    height: 15px;
    position: absolute;
    background-color: #FA9595;
    z-index:1;
    top: 0;
    bottom: 0;
    margin: auto;
    padding: 1px;
    border-radius: 50%;
    text-align: center;
    color: white;
    font-weight: normal;
    font-size: 12px;
    box-shadow: 0 0 2px #E50F0F;
    cursor: pointer;
  }
}

.btn-filter-apply {
  height: 23px;
  border: none;
  border-radius: 0;
  background: #878787 !important;
  margin-left: -3px;
  padding-top: 2px;
  color: white;
  width: 58px;
}


.btn-filter-apply:hover {
  background: #555759 !important;
}