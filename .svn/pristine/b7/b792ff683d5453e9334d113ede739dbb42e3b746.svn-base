

/*-----------------------------------
scorebar directive style
-------------------------------------*/
.lisview-container {
    padding-top: 20px;
    width: 100%;
    margin-top: 5px;
    /*border : 1px solid deeppink;*/
    height:100%;
    min-height:100%;
}

.lisview-container .row-container{
    margin-right: 0;
    margin-left: 0;
}
.selected {
    background-color: #d6f3da;
}

 td div {
     width: 150px;
     white-space: nowrap;
     overflow: hidden;
     text-overflow: ellipsis;
 }

 .table  tbody > tr div{
     height: 30px;
 }

 .table thead > tr > th {
     vertical-align: bottom;
     border-bottom: 1px solid #000000;
 }

.scorebar-mainDiv{
    padding: 0;margin: 0;width: 100%;float: left
}

.scorebar-scoreDiv{
    margin-top: 0px;width: 30px;display: inline-block;float: left
}

.scorebar-scorebarCanvas{
    padding-left: 0;padding-right: 0;margin-left: auto;margin-right: auto;display: block;float: left
}

/*Question score box style*/
.horizontal { display: inline; float: left; }
/*list view evaluation bubble style*/
.speech{
    position: relative;
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 5px;
    padding-bottom: 5px;
    text-align: center;
    height: 24px;
    background-color: #c8c8c8;
    border: 0px solid #c8c8c8;
    -webkit-border-radius: 0px;
    -moz-border-radius: 0px;
    border-radius: 0px;
    display: inline-block;
}
.speech:before
{
    content: ' ';
    position: absolute;
    width: 0;
    height: 0;
    left: 40%;
    top: 17px;
    border: 6px solid;
    border-color: #c8c8c8 transparent transparent #c8c8c8;
}
