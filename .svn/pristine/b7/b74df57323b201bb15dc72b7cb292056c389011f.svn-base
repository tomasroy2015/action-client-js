.user-account-settings-container{
    padding: 5px;
    margin: 0;
    padding-left: 16px;
}
.user-account-settings-container .template-header{
    display: inline-block;
    font-size: 14px;
    font-weight: bold;
    padding-top: 10px;
}
.user-account-settings-container .table{
    width: 95%;
}
.user-account-settings-container .table>tbody>tr>td{
    padding: 2px;
    border-top: transparent;
    border-bottom:1px solid #000000;
    font-size: 11px;
    padding-left: 8px;
}
.user-account-settings-container .table>tbody>tr:hover{
    background-color: #ddddde;
}
.user-account-settings-container .table>tbody>tr{
    width:100%;height:13px !important;overflow:hidden;
    background-color: #FFFFFF;
}
.user-account-settings-container .table > thead > tr > th{
    vertical-align: bottom;
    border-bottom: 1px solid #000000;
    padding: 2px;
    font-size: 11px;
    font-weight: bold;
    padding-left: 8px;
}
.user-account-settings-container .table-container{
    padding-top: 10px;
}

.sort:before{
    content: "";
    border-width: 0 4px 4px;
    border-style: solid;
    border-color: #000 transparent;
    visibility: visible;
    position: absolute;
    opacity: .3;
}
.sort:after{
    content: "";
    border-width: 0 4px 4px;
    border-style: solid;
    border-color: #000 transparent;
    visibility: visible;
    position: absolute;
    opacity: .3;
    margin-top: 2px;

}
.sort:before {
    margin-top: 8px;
    border-bottom: 0;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 4px solid #000;
}

.user-account-settings-container .table > thead > tr > th> i{padding-left: 4px;}
.user-account-settings-container .sortable {  cursor: pointer;}
.user-account-settings-container .st-sort-ascent i,.st-sort-descent i { padding-left: 4px; }
.user-account-settings-container .st-sort-ascent i:before {  content: '\25B2';}
.user-account-settings-container .st-sort-descent i:before {  content: '\25BC';}