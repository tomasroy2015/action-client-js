/* All external import files
======================================================*/
@import '_Colors';
@import '_Mixins';

$score-item-height:40px;
$calculate-right:11px;

ul.evaluation-summary-question {
  display: block;
  width: 260px;
  padding: 0px;
  position: relative;
  height: 211px;
  overflow-y: auto;
  border-top: 1px solid #d3d3d3;
  font-family: "AkkuratStd-Regular";
//  border-bottom: 1px solid #d3d3d3;
  font-family: "AkkuratStd-Regular";
  font:"akkuratstd-regular";
  li.evaluation-summary-questionListItem {
    display: block;
    height: $score-item-height;
    position: relative;
    padding: 0px;
    margin: 2px;
    font-size: 9px;
    text-align: center;
    border-bottom: 1px solid #d3d3d3;
  }
  .evaluation-summary-questionListItemDiv{
    position    : relative;
    height      : 100%;
  }
}

.evaluation-summary-questionContainerDiv {
  padding-top: 16px;
  margin: 0;
  font-size: 10px;
}

.evaluation-summary-questionLabelDiv {
  text-align: left;
  float: left;
  white-space: nowrap;
  width: 120px;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-top: 4px;
}

.evaluation-summary-questionScoreDiv1 {
  width: 30px;
  display: inline-block;
  float: right;
  font-weight: bold;
}

.canvasContainer {
  height : 28px;
}

.evaluation-summary-questionScorebar {
  background-color : transparent;
  padding-left     : 0;
  padding-right    : 0;
  margin-left      : 0;
  margin-right     : auto;
  display          : block;
  float            : left;
  top              : 5px
}

.evaluation-summary-questionText {
  color : #000000;
}
.score-frequency-container{
  display: flex;
  padding: 5px;
  text-align: center;
}
.score-frequency-container  .negative-label {
  margin-right: 2px;
  /* padding-top: 5px; */
  width: 20px;
  height: 20px;
  font-size: 16px;
  font-weight: bold;
  color: #ffffff;
  background: #ff0000;
}
.score-frequency-container  .positive-label {
  margin-right: 2px;
  /* padding-top: 5px; */
  width: 20px;
  height: 20px;
  font-size: 16px;
  font-weight: bold;
  color: #ffffff;
  background: #008000;
}