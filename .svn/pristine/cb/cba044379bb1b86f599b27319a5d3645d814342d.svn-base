.modal {
    text-align: center;
}

@media screen and (min-width: 768px) {
    .modal:before {
        display: inline-block;
        vertical-align: middle;
        content: " ";
        height: 100%;
    }
}

.modal-dialog {
    display: inline-block;
    text-align: left;
    vertical-align: middle;
    margin-left: 15%;
}

.modal-content{
    border-radius: 0px;
    width: 70%;
}
.help-container{
    width: 100%;
    /*height: 350px;*/
}
.help-container .modal-header {
    min-height: 16.428571429px;
    background-color: #000000;
    color: white;
    padding-top: 15px;
    padding-right: 0px;
    padding-bottom: 15px;
    padding-left: 15px;
     border-bottom: 1px solid #e5e5e5;
    height: 60px;
    display: inline-block;
    width: 100%;
     border-bottom: 1px solid #e5e5e5;
}
.help-container .modal-title{
    font-size: 16px;
    font-weight: bold;
    width: 92%;
    display: inline-block;
}
.help-container .modal-body{
    /*padding: 0px;*/
}
.help-container .modal-body .action-container{
    margin-bottom: 24px;
    padding-left: 8px;
}
.help-container .modal-body .action-container .header{
    font-size: 14px;
    font-weight: bold;
    padding-bottom: 8px;
}
.help-container .modal-body .action-container .text-container{
    font-size: 12px;
    margin-bottom: 20px;
    padding-left: 5px;
}
.help-container .fa-lg{
    font-size: 20px;
}
.help-container .cursor{
    cursor: pointer;
}