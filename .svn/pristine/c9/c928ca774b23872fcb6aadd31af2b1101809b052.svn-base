.content-page-header {
  position         : relative;
  height           : 80px;
  background-color : #878787;
  margin           : 0;
  padding          : 0;
}

.content-main {
  min-height         : 91%;
  height             : 91%;
  margin             : 0 auto;
  padding            : 10px;

  -webkit-box-sizing : border-box;
  -moz-box-sizing    : border-box;
  box-sizing         : border-box;
}

.view-container {
  width      : 100%;
  height     : 100%;
  min-height : 100%;
}

/*=====================================================
@Media Query Section
======================================================*/
@media only screen and (min-width : 768px) {
  .col-md-3.left-menu {
    float : left;
    /*         z-index : 50000; */
  }

  .col-md-9.right-content {
    float : left;
    width : -webkit-calc(100% - 252.500px);
    width : -moz-calc(100% - 252.500px);
    width : -ms-calc(100% - 252.500px);
    width : -o-calc(100% - 252.500px);
    width : calc(100% - 252.500px);
  }
}

@media only screen and (max-width : 767px) {
  .col-md-3.left-menu {
    float : left;
  }

  .col-md-9.right-content {
    float : left;
    /*width            : calc(100% - 252.500px);*/
    width : -webkit-calc(100% - 252.500px);
    width : -moz-calc(100% - 252.500px);
    width : -ms-calc(100% - 252.500px);
    width : -o-calc(100% - 252.500px);
    width : calc(100% - 252.500px);
    /*background : #ff0000;*/
  }
}

@media only screen and (max-height : 768px) {
  .content-main {
    min-height         : 88%;
    height             : 88%;
    margin             : 0 auto;
    padding            : 10px;

    -webkit-box-sizing : border-box;
    -moz-box-sizing    : border-box;
    box-sizing         : border-box;
  }
}

/*=====================================================
Slide in/out Section
======================================================*/

.slide-out {
  position : fixed;
  left     : -253px;
  z-index  : 20;
}

.slide-in {
  position   : fixed;
  top        : 20px;
  left       : -253px;
  width      : 200px;
  height     : 200px;
  background : #f00;
  z-index    : 10;
}

/* Full scorecard section
======================================================*/
.full-scorecard-window-container {
  width      : calculateFullScorecardWidth(285px);
  height     : 92%;
  background : #fff;
  //left: - calculateFullScorecardWidth(0px) -253px;
  //left       : - calculateFullScorecardWidth();
  left       : -100%;
  @include boxShadow(0, 0, 4px, 2px, #000, 0.5);
}

.data-filter-window-container {
  top        : 0;
  width      : 423px;
  height     : 627px;
  background : #555759;
  //left       : - calculateFullScorecardWidth(0px);
  left       : -100%;
  @include boxShadow(0, 0, 4px, 2px, #000, 0.5);
}

.left-menu-evaluation-container {
  top              : 0;
  width:calc(100% - 275px);
  height           : calc(100% - 80px);
  background-color : #fff;
  left             : -100%;
  @include boxShadow(0, 0, 4px, 2px, #000, 0.5);
}

#leftMenuEvaluationWindow{
  height: 100%;
  width: 100%;
}

